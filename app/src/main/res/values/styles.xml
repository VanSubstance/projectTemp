<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/textFontBC</item>
        <item name="android:buttonStyle">@style/buttonFontBC</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>

        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    
    <style name="fragment">
        <item name="android:background">@drawable/editext_border3</item>
    </style>

    <style name="buttonView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_press_event</item>
    </style>

    <style name="buttonView2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_press_event2</item>
    </style>

    <style name="MyCheckBox">
        <item name="buttonTint">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textFontBC" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bccard_l</item>
    </style>

    <style name="buttonFontBC" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/bccard_l</item>
    </style>

</resources>
