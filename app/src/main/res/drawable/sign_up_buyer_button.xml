<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <gradient
                android:angle="45"
                android:startColor="#BFe14fad"
                android:endColor="#BFf9d423"
                android:type="linear"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <gradient
                android:angle="45"
                android:startColor="#e14fad"
                android:endColor="#f9d423"
                android:type="linear"
                />
        </shape>

    </item>


</selector>