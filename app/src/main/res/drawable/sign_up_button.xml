<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape
        android:shape="rectangle" >
        <corners
            android:radius="30dp"
            />
        <gradient
            android:angle="45"
            android:startColor="#80209CFF"
            android:endColor="#8012fff7"
            android:type="linear"
            />
    </shape>
</item>
<item android:state_pressed="false">
    <shape
        android:shape="rectangle" >
        <corners
            android:radius="30dp"
            />
        <gradient
            android:angle="45"
            android:startColor="#209cff"
            android:endColor="#12fff7"
            android:type="linear"
            />
    </shape>

</item>


</selector>