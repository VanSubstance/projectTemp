<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/seller_id"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/seller_pass"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="패스워드"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/seller_id"
        app:layout_constraintStart_toStartOf="@+id/seller_id"
        app:layout_constraintTop_toBottomOf="@+id/seller_id" />
    <EditText
        android:id="@+id/seller_passck"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="패스워드 확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/seller_pass"
        app:layout_constraintStart_toStartOf="@+id/seller_pass"
        app:layout_constraintTop_toBottomOf="@+id/seller_pass" />

    <EditText
        android:id="@+id/seller_name"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/seller_passck"
        app:layout_constraintStart_toStartOf="@+id/seller_passck"
        app:layout_constraintTop_toBottomOf="@+id/seller_passck" />

    <EditText
        android:id="@+id/seller_address"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="매장위치"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toEndOf="@+id/seller_name"
        app:layout_constraintStart_toStartOf="@+id/seller_name"
        app:layout_constraintTop_toBottomOf="@+id/seller_name" />
    <EditText
        android:id="@+id/seller_Phone_number"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="핸드폰 번호"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/seller_address"
        app:layout_constraintStart_toStartOf="@+id/seller_address"
        app:layout_constraintTop_toBottomOf="@+id/seller_address" />

    <EditText
        android:id="@+id/MarketName"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="매장명"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/seller_Phone_number"
        app:layout_constraintStart_toStartOf="@+id/seller_Phone_number"
        app:layout_constraintTop_toTopOf="@+id/seller_Phone_number" />

    <EditText
        android:id="@+id/Market_time"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="영업"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="@+id/MarketName"
        app:layout_constraintStart_toStartOf="@+id/MarketName"
        app:layout_constraintTop_toTopOf="@+id/MarketName" />

    <Button
        android:id="@+id/btn_category"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="카테고리"
        app:layout_constraintEnd_toEndOf="@+id/Market_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Market_time"
        app:layout_constraintTop_toBottomOf="@+id/Market_time" />

    <Button
        android:id="@+id/btn_register_seller"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="@+id/btn_category"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_category"
        app:layout_constraintTop_toBottomOf="@+id/btn_category" />

    <Button
        android:id="@+id/validateButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:text="중복확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/seller_id"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>