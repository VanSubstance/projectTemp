<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/editext_border"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/picktimebtn_E"
                style="@style/buttonView"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:ems="5"
                android:text="time pick"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/time_E"
                app:layout_constraintEnd_toEndOf="@+id/picktimebtn_S"
                app:layout_constraintTop_toTopOf="@+id/time_E" />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="#A9A9A9"
                app:layout_constraintBottom_toTopOf="@+id/buttonSelectMarket"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seller_Phone_number" />

            <EditText
                android:id="@+id/seller_pass"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="패스워드"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/validateButton_seller"
                app:layout_constraintStart_toStartOf="@+id/seller_id"
                app:layout_constraintTop_toBottomOf="@+id/validateButton_seller" />

            <EditText
                android:id="@+id/storeName"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="매장명"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/seller_Phone_number"
                app:layout_constraintStart_toStartOf="@+id/seller_Phone_number"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <TextView
                android:id="@+id/time_s"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:text="개점 시간"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/storeName"
                app:layout_constraintStart_toStartOf="@+id/storeName"
                app:layout_constraintTop_toBottomOf="@+id/storeName" />

            <EditText
                android:id="@+id/seller_Phone_number"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="핸드폰 번호"
                android:inputType="phone"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/seller_name"
                app:layout_constraintStart_toStartOf="@+id/seller_name"
                app:layout_constraintTop_toBottomOf="@+id/seller_name" />

            <Button
                android:id="@+id/picktimebtn_S"
                style="@style/buttonView"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:ems="5"
                android:text="time pick"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/time_s"
                app:layout_constraintEnd_toEndOf="@+id/storeName"
                app:layout_constraintTop_toTopOf="@+id/time_s" />

            <EditText
                android:id="@+id/seller_passck"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="패스워드 확인"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/seller_pass"
                app:layout_constraintStart_toStartOf="@+id/seller_pass"
                app:layout_constraintTop_toBottomOf="@+id/seller_pass" />

            <EditText
                android:id="@+id/seller_id"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="ID"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toStartOf="@+id/validateButton_seller"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/seller_name"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/seller_passck"
                app:layout_constraintStart_toStartOf="@+id/seller_passck"
                app:layout_constraintTop_toBottomOf="@+id/et_email" />

            <TextView
                android:id="@+id/seller_cat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="카테고리"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/time_E"
                app:layout_constraintStart_toStartOf="@+id/time_E"
                app:layout_constraintTop_toBottomOf="@+id/time_E" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="주소"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/location"
                app:layout_constraintStart_toStartOf="@+id/location"
                app:layout_constraintTop_toBottomOf="@+id/location" />

            <TextView
                android:id="@+id/time_E"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:text="폐점 시간"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/time_s"
                app:layout_constraintStart_toStartOf="@+id/time_s"
                app:layout_constraintTop_toBottomOf="@+id/time_s" />

            <Button
                android:id="@+id/buttonCtgr"
                style="@style/buttonView"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:ems="5"
                android:text="카테고리"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/seller_cat"
                app:layout_constraintEnd_toEndOf="@+id/picktimebtn_E"
                app:layout_constraintTop_toTopOf="@+id/seller_cat" />

            <Button
                android:id="@+id/buttonSelectMarket"
                style="@style/buttonView"
                android:layout_width="70dp"
                android:layout_height="0dp"

                android:ems="5"
                android:text="select"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/address"
                app:layout_constraintEnd_toEndOf="@+id/seller_Phone_number"
                app:layout_constraintTop_toTopOf="@+id/location" />

            <Button
                android:id="@+id/btn_register_seller"
                style="@style/buttonView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="완료"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/seller_cat"
                app:layout_constraintStart_toStartOf="@+id/seller_cat"
                app:layout_constraintTop_toBottomOf="@+id/seller_cat" />

            <Button
                android:id="@+id/validateButton_seller"
                style="@style/buttonView"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:ems="5"
                android:text="중복확인"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seller_id" />

            <Button
                android:id="@+id/certify_btn"
                style="@style/buttonView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="인증하기"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_email"
                app:layout_constraintEnd_toEndOf="@+id/validateButton_seller"
                app:layout_constraintStart_toStartOf="@+id/validateButton_seller"
                app:layout_constraintTop_toTopOf="@+id/et_email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editext_border"
                android:ems="10"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/seller_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seller_passck" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="시장이름"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/seller_id"
                app:layout_constraintStart_toStartOf="@+id/seller_Phone_number"
                app:layout_constraintTop_toBottomOf="@+id/view11" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>