<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/element_border_black_1dp">

        <TextView
            android:id="@+id/staticProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="상품 이름"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@id/staticProductTitle"
            app:layout_constraintTop_toBottomOf="@id/staticProductTitle"/>

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/element_border_black_0_5dp"
            />

        <TextView
            android:id="@+id/staticPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="가격"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/staticProductTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@id/staticPrice"
            app:layout_constraintTop_toBottomOf="@id/staticPrice"/>

        <TextView
            android:id="@+id/staticPriceUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@id/textPrice"
            app:layout_constraintTop_toTopOf="@id/textPrice"/>

        <TextView
            android:id="@+id/staticServing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="양"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/staticPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/textServing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="text"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@id/staticServing"
            app:layout_constraintTop_toBottomOf="@id/staticServing"
            />

        <TextView
            android:id="@+id/staticServingUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인분"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@id/textServing"
            app:layout_constraintTop_toTopOf="@id/textServing"/>

        <TextView
            android:id="@+id/staticQuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="수량"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/staticServing"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
        android:id="@+id/textQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/staticQuan"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        />

        <TextView
            android:id="@+id/textQuanUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@id/textQuan"
            app:layout_constraintTop_toTopOf="@id/textQuan"/>

        <TextView
            android:id="@+id/textQuanSlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="/"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@id/textQuan"
            app:layout_constraintTop_toTopOf="@id/textQuan"/>

        <TextView
            android:id="@+id/textQuanTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:inputType="text"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@id/textQuanSlash"
            app:layout_constraintTop_toBottomOf="@id/staticQuan"
            />

        <TextView
            android:id="@+id/textQuanUnitTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="개"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@id/textQuanTotal"
            app:layout_constraintTop_toTopOf="@id/textQuanTotal"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/staticSoldDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="40dp"
            android:text="판매 날짜"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/staticServing"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textSoldDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="text"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@id/staticSoldDate"
            app:layout_constraintTop_toBottomOf="@id/staticSoldDate"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>