<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/staticTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 이름"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />


    <TextView
        android:id="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@id/staticTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text=""
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/staticPrice"
        app:layout_constraintTop_toTopOf="@id/staticTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textPrice"
        app:layout_constraintTop_toBottomOf="@id/staticPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textPriceUnit"
        app:layout_constraintTop_toBottomOf="@id/staticPrice"
        app:layout_constraintLeft_toRightOf="@id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textQuanUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="개"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textQuan"
        app:layout_constraintTop_toBottomOf="@+id/staticQuan" />

    <TextView
        android:id="@+id/staticServing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="양"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/staticPrice" />

    <TextView
        android:id="@+id/textServing"
        app:layout_constraintTop_toBottomOf="@id/staticServing"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staticQuan" />

    <TextView
        android:id="@+id/textServingUnit"
        app:layout_constraintTop_toBottomOf="@id/staticServing"
        app:layout_constraintLeft_toRightOf="@id/textServing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인분"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/staticQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="수량"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/staticServing" />


    <Button
        android:id="@+id/buttonBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="장바구니에 담기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonPurchase"
        app:layout_constraintTop_toBottomOf="@+id/textQuan" />

    <Button
        android:id="@+id/buttonPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="구매"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBasket"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonBasket" />

</androidx.constraintlayout.widget.ConstraintLayout>