<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/layoutBuyerUIMainCtgr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4">

            <ImageButton
                android:id="@+id/buttonRecipe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="육류"
                android:src="@drawable/ui_ctgr_meat"
                android:padding="0dp"
                android:background="#00ff0000"/>

            <ImageButton
                android:id="@+id/buttonRecipe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="해산물"
                android:src="@drawable/ui_ctgr_seafood"
                android:padding="0dp"
                android:background="#00ff0000"/>

            <ImageButton
                android:id="@+id/buttonRecipe3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="채소류"
                android:src="@drawable/ui_ctgr_vegetable"
                android:padding="0dp"
                android:background="#00ff0000"/>

            <ImageButton
                android:id="@+id/buttonRecipe4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="기타"
                android:src="@drawable/ui_ctgr_etc"
                android:padding="0dp"
                android:background="#00ff0000"/>

        </GridLayout>

        <FrameLayout
            android:id="@+id/recipe_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/element_border">

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>