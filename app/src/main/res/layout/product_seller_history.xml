<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/element_border"
    >

    <ImageView
        android:id="@+id/productImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 이름"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/productTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textPrice"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintLeft_toRightOf="@id/productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/productPrice"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintRight_toLeftOf="@id/textPriceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="얼마"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textPriceUnit"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintLeft_toRightOf="@id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textQuan"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintLeft_toRightOf="@id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="양"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/productQuan"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintRight_toLeftOf="@id/textQuanUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몆"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textQuanUnit"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintLeft_toRightOf="@id/textQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인분"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/productSoldDate"
        app:layout_constraintTop_toTopOf="@id/textTitle"
        app:layout_constraintLeft_toLeftOf="@id/textQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />


</androidx.constraintlayout.widget.ConstraintLayout>