<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/marketMine"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="우리 시장"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/marketAround"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="근처 시장"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textListCtgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            app:layout_constraintLeft_toLeftOf="@id/marketMine"
            app:layout_constraintTop_toBottomOf="@id/marketMine"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/listCtgr"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            app:layout_constraintRight_toRightOf="@id/marketMine"
            app:layout_constraintTop_toBottomOf="@id/marketMine"
            android:entries="@array/sellerUICtgr"
            />

        <TextView
            android:id="@+id/textListSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정렬"
            app:layout_constraintLeft_toLeftOf="@id/marketAround"
            app:layout_constraintTop_toBottomOf="@id/marketAround"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/listSort"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/marketAround"
            app:layout_constraintTop_toBottomOf="@id/marketAround"
            android:entries="@array/sellerUITodaySort"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="700dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>