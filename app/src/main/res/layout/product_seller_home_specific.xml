<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/staticTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 이름"
        android:textSize="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />


    <TextView
        android:id="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@id/staticTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text=""
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/staticPrice"
        app:layout_constraintTop_toTopOf="@id/staticTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textPrice"
        app:layout_constraintTop_toBottomOf="@id/staticPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textPriceUnit"
        app:layout_constraintTop_toBottomOf="@id/staticPrice"
        app:layout_constraintLeft_toRightOf="@id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/staticQuan"
        app:layout_constraintTop_toTopOf="@id/staticPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량"
        android:textSize="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textQuan"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textQuanUnit"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintLeft_toRightOf="@id/textQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인분"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/buttonModify"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintRight_toLeftOf="@id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/buttonDelete"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/staticImage"
        app:layout_constraintBottom_toTopOf="@id/imageProduct"
        app:layout_constraintLeft_toLeftOf="@id/imageProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 사진"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/imageProduct"
        app:layout_constraintTop_toTopOf="@id/textTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="160dp"
        android:layout_height="160dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/buttonChangeImage"
        app:layout_constraintTop_toBottomOf="@id/imageProduct"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 변경"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>