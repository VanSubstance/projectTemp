<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/element_border_black_1dp">

        <TextView
            android:id="@+id/staticProductTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 이름"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/textProductTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="text"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/staticQuan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textPrice"
            app:layout_constraintTop_toBottomOf="@id/staticProductTitle" />

        <TextView
            android:id="@+id/staticPrice"
            app:layout_constraintTop_toTopOf="@id/staticProductTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/textPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/staticPrice" />

        <TextView
            android:id="@+id/staticPriceUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="원"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/textPrice"
            app:layout_constraintLeft_toRightOf="@id/textPrice"
            app:layout_constraintTop_toTopOf="@+id/textPrice" />

        <TextView
            android:id="@+id/staticQuan"
            app:layout_constraintTop_toTopOf="@id/staticPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양 (몇인분인가요?)"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/textServing"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/staticQuan" />

        <TextView
            android:id="@+id/staticServingUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="인분"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/textServing"
            app:layout_constraintLeft_toRightOf="@id/textServing"
            app:layout_constraintTop_toTopOf="@+id/textServing" />

        <TextView
            android:id="@+id/staticServing"
            app:layout_constraintTop_toTopOf="@id/staticQuan"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수량 (얼마나 파실껀가요?)"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/textQuan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:text=""
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/staticServing" />

        <TextView
            android:id="@+id/staticQuanUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="개"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/textQuan"
            app:layout_constraintLeft_toRightOf="@id/textServing"
            app:layout_constraintTop_toTopOf="@+id/textQuan" />

        <Button
            android:id="@+id/buttonEnroll"
            style="@style/buttonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:text="추가(등록)"
            app:layout_constraintRight_toLeftOf="@id/buttonCancel"
            app:layout_constraintTop_toBottomOf="@id/staticServing" />

        <Button
            android:id="@+id/buttonCancel"
            style="@style/buttonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:text="취소"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/staticServing" />

        <TextView
            android:id="@+id/staticImage"
            app:layout_constraintBottom_toTopOf="@id/imageProduct"
            app:layout_constraintLeft_toLeftOf="@id/imageProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 사진"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/imageProduct"
            app:layout_constraintTop_toTopOf="@id/textProductTitle"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/element_border_black_0_5dp"/>

        <Button
            android:id="@+id/buttonChangeImage"
            style="@style/buttonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="사진 변경"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>