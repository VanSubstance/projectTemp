<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/staticTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 이름"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/inputTitle"
        app:layout_constraintTop_toBottomOf="@id/staticTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/staticPrice"
        app:layout_constraintTop_toTopOf="@id/staticTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/inputPrice"
        app:layout_constraintTop_toBottomOf="@id/staticPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/staticQuan"
        app:layout_constraintTop_toTopOf="@id/staticPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량 (몆 인분인가요?)"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/inputQuan"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/buttonEnroll"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintRight_toLeftOf="@id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가(등록)"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/buttonCancel"
        app:layout_constraintTop_toBottomOf="@id/staticQuan"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>